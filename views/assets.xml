<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="ow_portal_certifica" inherit_id="web.assets_frontend">
        <xpath expr="//head" position="inside">
            <style type="text/css">
                @media print {
                    .noPrint {
                        display: none;
                    }
                }
                
                h1 {
                    color: #f6f6f6;
                }
            </style>
        </xpath>
    </template>
    
    <template id="ow_portal_certifica_report" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <style type="text/css">
                @media print {
                    .noPrint {
                        display: none;
                    }
                }
                
                h1 {
                    color: #f6f6f6;
                }
            </style>
        </xpath>
    </template>

</odoo>
