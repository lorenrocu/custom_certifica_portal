<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para informes.encuestas.merge con botones JS Card -->
        <!-- Esta vista busca la vista de formulario del modelo informes.encuestas.merge -->
        <record id="view_informes_encuestas_merge_form_qr_buttons" model="ir.ui.view">
            <field name="name">informes.encuestas.merge.form.qr.buttons</field>
            <field name="model">informes.encuestas.merge</field>
            <field name="inherit_id" ref="base.view_model_form"/>
            <field name="arch" type="xml">
                <!-- Agregar botones JS Card en el header del formulario -->
                <xpath expr="//header" position="inside">
                    <button type="object" name="action_generate_qr_js_card_15" string="1.5 JS Card" class="oe_highlight" icon="fa-qrcode" attrs="{'invisible': [('id', '=', False)]}"/>
                    <button type="object" name="action_generate_qr_js_card_35" string="3.5 JS Card" class="oe_highlight" icon="fa-qrcode" attrs="{'invisible': [('id', '=', False)]}"/>
                    <button type="object" name="action_generate_qr_js_card_50" string="5.0 JS Card" class="oe_highlight" icon="fa-qrcode" attrs="{'invisible': [('id', '=', False)]}"/>
                    <button type="object" name="action_generate_qr_js_card_95" string="9.5 JS Card" class="oe_highlight" icon="fa-qrcode" attrs="{'invisible': [('id', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

