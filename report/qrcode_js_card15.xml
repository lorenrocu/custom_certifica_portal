<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="print2_qr15_js_card">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.create_uid.lang})" />
            <div class="page" style="position:absolute; top:-40; left:0; ">
                <div style="display: inherit;margin:auto;text-align: center;">
                    <img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' %  to_text(doc.company_id.logo) " style="max-height:30px;"/>
                </div>
                <div style="display: inherit;margin:auto;text-align: center;padding-top:5px;">
                    <!-- Imagen del QR Card cargada vÃ­a JavaScript -->
                    <img id="qr_card_img" class="js-qr-card" t-att-data-qr="doc.xurldownload or xurldownload" t-att-data-cm="cm or '1.5'" alt="QR Card" style="max-width:100%;"/>
                </div>
            </div>
        </template>

        <template id="report_qrcode15_js_card">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_certifica_portal.print2_qr15_js_card" />
                </t>
            </t>
        </template>

        <report
                id="print_qr_js_card15"
                menu="True"
                string="QRCode - 1.5cm JS Card"
                model="informes.encuestas.merge"
                report_type="qweb-html"
                file="custom_certifica_portal.report_qrcode15_js_card"
                name="custom_certifica_portal.report_qrcode15_js_card"
                print_report_name="'qrcode15_js_card - %s' % (object.name)" />

    </data>


</odoo>