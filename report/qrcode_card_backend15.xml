<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Plantilla que muestra Ãºnicamente la URL utilizada para generar el QR -->
        <template id="print2_qr_card15_backend">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.create_uid.lang})" />
            <div class="page" style="position:absolute; top:-40; left:0; ">
                <div style="display: inherit;margin:auto;text-align: center;">
                    <!-- Mostrar solo la URL exacta utilizada para el QR -->
                    <span t-esc="doc.xurldownload" style="font-size:12px; word-break: break-all;"></span>
                </div>
            </div>
        </template>

        <template id="report_qrcode_card15_backend">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_certifica_portal.print2_qr_card15_backend" />
                </t>
            </t>
        </template>

        <report
                id="print_qr_card_backend15"
                menu="True"
                string="QRCode Card - 1.5cm"
                model="informes.encuestas.merge"
                report_type="qweb-html"
                file="custom_certifica_portal.report_qrcode_card15_backend"
                name="custom_certifica_portal.report_qrcode_card15_backend"
                print_report_name="'QrcodeCard-1.5 - %s' % (object.codigocliente)" />

    </data>


</odoo>