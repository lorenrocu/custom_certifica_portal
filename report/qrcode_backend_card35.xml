<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="print2_qr_card35_backend">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.create_uid.lang})" />
            <img t-att-src="'https://ctf-qr.onrender.com/card?qr=' + doc.xurldownload + '&amp;cm=3.5'" />
        </template>

        <template id="report_qrcode_card35_backend">
            <t t-foreach="docs" t-as="doc">
                <t t-call="custom_certifica_portal.print2_qr_card35_backend" />
            </t>
        </template>

        <report
                id="print_qr_backend_card35"
                menu="True"
                string="QRCode Card - 3.5cm"
                model="informes.encuestas.merge"
                report_type="qweb-html"
                file="custom_certifica_portal.report_qrcode_card35_backend"
                name="custom_certifica_portal.report_qrcode_card35_backend"
                print_report_name="'Qrcode-Card-3.5 - %s' % (object.codigocliente)" />

    </data>


</odoo>
